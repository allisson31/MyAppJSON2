<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0C0C0C"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/btMJSON"
        android:layout_width="253dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="76dp"
        android:layout_marginTop="12dp"
        android:background="#EACACA"
        android:backgroundTint="#DCB0B0"
        android:onClick="btVer"
        android:text="Ver Informacion"
        android:textColor="#070707"
        android:textColorHighlight="#0E0E0E"
        android:textColorLink="#050505"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtMJson"
        android:layout_width="match_parent"
        android:layout_height="582dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="76dp"
        android:background="#EECAF4"
        android:textColorHint="#0C0C0C" />

</RelativeLayout>